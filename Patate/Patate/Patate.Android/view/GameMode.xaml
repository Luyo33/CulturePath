<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Patate.Droid.view.GameMode">
  <ContentView.Content>
      <StackLayout>
          <Label Text="Welcome in the GameMode" />
            <Label Text="The GameMode was designed for young people
                 of all ages. Mini-Games will be available on the
                 toursistics site." 
                   BackgroundColor="Green"
                   VerticalOptions="Start"
                   HorizontalOptions="Center"/>
          
            <Button Text="Continue"
                  Clicked="NextPage"
                  BackgroundColor="AliceBlue"
                  VerticalOptions="End"/>
        </StackLayout>
  </ContentView.Content>
</ContentView>